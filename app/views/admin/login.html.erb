<%= render 'layouts/header_admin' %> 

<div class="container">
	<div class="page-header">
	  <h1 class="text-center">Admin <small>Login</small></h1>
	</div>
	<div class="card mx-auto">
		<%= form_tag "/admin/login", method: "post", class: "card-block" do %>
			<% if @err == "user" %>
				<div class="alert alert-danger" role="alert">User not found</div>
			<% elsif @err == "pass" %>
				<div class="alert alert-warning" role="alert">Wrong password</div>
			<% end %>

			<div class="form-group">
				<label for="username">Username</label>
				<input type="text"  class="form-control" name="username" value="">			
			</div>

			<div class="form-group">
				<label for="password">Password</label>
				<input type="password"  class="form-control" name="password" value="">			
			</div>
			<input class="btn" type="submit" value="Sign in">
		<% end %>			
	</div>

</div>


