<%= render 'layouts/header' %> 
<div class="container" style="padding-top:60px">

<% if params[:err] == "incorrect" %>
        <div class="alert alert-success text-center" role="alert">Vos informations sont incorrect</div>
<% end %>
    <div class="row">
        <div class="col-sm-8" style="margin:auto">
            <h2 class="text-center" style="margin:30px 0px">Inscription</h2>
            <%= form_for User.new do |f| %>

                <div class="group-form row" style="margin-bottom:10px">
                    <%= f.label :name , 'PrÃ©nom', class:"col-2 col-form-label"%>
                    <div class="col-10">
                        <%= f.text_field :name, class:"form-control"%>
                    </div>
                </div>
                <div class="group-form row" style="margin-bottom:10px">
                    <%= f.label :surname , 'Nom', class:"col-2 col-form-label"%>
                    <div class="col-10">
                        <%= f.text_field :surname, class:"form-control"%>
                    </div>
                </div>
                <div class="group-form row" style="margin-bottom:10px">
                    <%= f.label :email , 'Email', class:"col-2 col-form-label"%>
                    <div class="col-10">
                        <%= f.email_field :email, class:"form-control"%>
                    </div>
                </div>
                <div class="group-form row" style="margin-bottom:10px">
                    <%= f.label :password , 'Mot de passe', class:"col-2 col-form-label"%>
                    <div class="col-10">
                        <%= f.password_field :password, class:"form-control"%>
                    </div>
                </div>
                <div class="group-form row" style="margin-bottom:10px">
                    <%= f.label :birthdate , 'Date de naissance', class:"col-2 col-form-label"%>
                    <div class="col-10">
                        <%= f.text_field :birthdate, class:"form-control", type:"date"%>
                    </div>
                </div>
                <div class="group-form row" style="margin-bottom:10px">
                    <%= f.label :address , 'Adresse', class:"col-2 col-form-label"%>
                    <div class="col-10">
                        <%= f.text_field :address, class:"form-control"%>
                    </div>
                </div>
                <div class="group-form row" style="margin-bottom:10px">
                    <%= f.label :city , 'Ville', class:"col-2 col-form-label"%>
                    <div class="col-10">
                        <%= f.text_field :city, class:"form-control"%>
                    </div>
                </div>
                <div class="group-form row" style="margin-bottom:10px">
                    <%= f.label :zipcode, 'Code postal' , class:"col-2 col-form-label"%>
                    <div class="col-10">
                        <%= f.text_field :zipcode, class:"form-control"%>
                    </div>
                </div>
                
                <div class="row">
                    <%= f.submit 'S\'inscrire', class:"btn btn-primary" , style:"margin:auto" %>
                </div>
               
            <% end %>

        </div>
    </div>
   
</div>