<%= render 'layouts/header_admin_connected' %> 
<div class="container mt-4">

	<div class="page-header">
	<a href="/admin/users/add" class="btn btn-primary float-right">Add user</a>
	  	<h1>Users <small>| Index</small></h1>	
	</div>

	<ol class="breadcrumb">
		<li class="breadcrumb-item"><a href="/admin">Home</a></li>
		<li class="breadcrumb-item active">Users</li>
	</ol>

	<table class="table mt-4">
	  <thead>
	    <tr>
	      <th>ID</th>
	      <th>First Name</th>
	      <th>Last Name</th>
	      <th>Email</th>
	      <th>City</th>
	      <th>Zipcode</th>
	      <th>See more</th>
	    </tr>
	  </thead>
	  <tbody>
		<% if !@users.blank? %>
			<% @users.each do |user| %>
		    <tr>
		      <th scope="row"><%= user['id'] %></th>
		      <td><%= user['name'] %></td>
		      <td><%= user['surname'] %></td>
		      <td><%= user['email'] %></td>
		      <td><%= user['city'] %></td>
		      <td><%= user['zipcode'] %></td>
		      <td><a href="/admin/users/<%= user['id'] %>" class="btn btn-sm btn-primary">Click</a></td>
		    </tr>
			<% end %>
		<% else %>
		    <tr>
		      <th scope="row">0</th>
		      <td>No user found</td>
		    </tr>
		<% end %>
	  </tbody>
	</table>

	<%= will_paginate @users, class: "pagecenter" %>

</div>

