<%= render 'layouts/header_admin_connected' %> 
<div class="container mt-4">

	<% if params['result'] == "user" %>
		<div class="alert alert-danger" role="alert">
		  <strong>Error !</strong> User not found.
		</div>
	<% elsif params['result'] == "candidat" %>
		<div class="alert alert-danger" role="alert">
		  <strong>Error !</strong> User not candidat.
		</div>
	<% end %>

	<div class="page-header">
	  	<h1>Elections Candidates <small>| Add a new election candidate</small></h1>
	</div>

	<ol class="breadcrumb">
		<li class="breadcrumb-item"><a href="/admin">Home</a></li>
		<li class="breadcrumb-item"><a href="/admin/elections">Elections</a></li>
		<li class="breadcrumb-item"><a href="/admin/elections/<%= params['id'] %>">Elections</a></li>
		<li class="breadcrumb-item active">Add election candidate</li>
	</ol>

	<%= form_tag "/admin/elections/" + params['id'] + "/candidats", method: "post", class: "card-block" do %>
		<div class="form-group">
			<label for="election_id">Election ID</label>
			<input required="required" disabled type="number"  class="form-control" name="election_id" value="<%= params['id'] %>">	
		</div>		
		<div class="form-group">
			<label for="email">Candidate Email</label>
			<input required="required" type="email" class="form-control" name="email" value="<%= params['email'] %>">	
		</div>			
		<div class="form-group">
			<input type="submit" value="Add election candidate" class="btn btn-info">			
		</div>		

	<% end %>
</div>